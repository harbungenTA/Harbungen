#include <iostream>
#include <string>
#include <cstdlib>
#include <fstream>

using namespace std;

class plik {
public:
    plik();
    ~plik();
    virtual void loop() = 0;
    ifstream wejPlik;
};

class sus
    :public plik
{
    int l1, l2, l3, l4;
    int nwd(int a, int b);

public:

    virtual void loop();

};

plik::plik() {

    wejPlik.open("ulamki.txt");

    if (!wejPlik.good())
    {
        cout << "Nie da się otworzyć!"<<endl;
    }
}

plik::~plik() {
    wejPlik.close();
}

void sus::loop() {

    for (int i = 0; i < 1001; ++i) {
        wejPlik >> l1;
        wejPlik >> l2;
        l3 = nwd(l1, l2);
        cout << l1 / l3 << "/" << l2 / l3 << endl;
        l4 += l1 / l3;
    }
    cout << l4;
}
int sus::nwd(int x, int y)
{
    if (y == 0)
        return x;

    return nwd(y, x % y);
}


int main() {

    sus wypisz;
    wypisz.loop();

    return 0;
}
